{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Nono Docs",
  "logo": {
    "dark": "/logo/dark.svg",
    "light": "/logo/light.svg",
    "height": 40,
    "href": "https://nono.sh"
